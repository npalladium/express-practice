{
  "name": "express-practice",
  "version": "0.0.1",
  "description": "RESTful API with Node, Express, Mongo and TypeScript.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --project ./tsconfig.json",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "start": "tsc --project ./tsconfig.json && nodemon --trace-warnings --exec babel-node dist",
    "clean": "rm -rf src/**/*.js src/**/*.map",
    "pretty": "node_modules/.bin/prettier -w src/**/*.ts",
    "lint": "./node_modules/.bin/eslint -c .eslintrc.js 'src/**/**.ts'",
    "lint-fix": "./node_modules/.bin/eslint --fix -c .eslintrc.js src/**/*.ts -t verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npalladium/express-practice.git"
  },
  "author": "Nikhil Pallamreddy",
  "license": "MIT",
  "devDependencies": {
    "@babel/node": "^7.14.7",
    "@types/express": "^4.17.13",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^16.3.2",
    "eslint": "^7.30.0",
    "nodemon": "^2.0.12",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.13.2"
  }
}
